{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    // "allowJs": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": [
        "./components/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "hooks/*": [
        "./hooks/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.tsx",
    "src/components/header.js",
    "src/components/header.js",
    "src/components/header.js"
  ],
  "exclude": [
    "node_modules",
  ]
}